{
  "name": "fork-version",
  "version": "3.0.2",
  "license": "MIT",
  "description": "Fork-Version automates version control tasks such as determining, updating, and committing versions, files, and changelogs, simplifying the process when adhering to the conventional commit standard.",
  "keywords": [
    "changelog",
    "commit",
    "conventional changelog",
    "conventional commits",
    "git",
    "metadata",
    "semantic version",
    "semantic",
    "semver",
    "tag",
    "version"
  ],
  "homepage": "https://github.com/eglavin/fork-version",
  "bugs": {
    "url": "https://github.com/eglavin/fork-version/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eglavin/fork-version.git"
  },
  "author": {
    "name": "Eanna Glavin",
    "url": "https://eglavin.com"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./cli": {
      "import": {
        "types": "./dist/cli.d.ts",
        "default": "./dist/cli.js"
      },
      "require": {
        "types": "./dist/cli.d.cts",
        "default": "./dist/cli.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "fork-version": "dist/cli.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "fork-version": "node dist/cli.js",
    "dev": "tsup --watch",
    "build": "tsup",
    "update-json-schema": "node scripts/update-json-schema.js",
    "update-readme-cli-options": "node scripts/update-readme-cli-options.js",
    "lint": "eslint --fix \"src/**/*.{js,ts}\"",
    "lint:check": "eslint \"src/**/*.{js,ts}\"",
    "lint:format": "prettier --write \"src/**/*.{js,ts}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:cover": "vitest --coverage",
    "test:ci": "vitest run --coverage --no-file-parallelism",
    "test:ui": "vitest --ui",
    "test:cleanup": "rimraf -g ../fork-version.tests/*"
  },
  "dependencies": {
    "bundle-require": "5.1.0",
    "cheerio": "1.1.2",
    "conventional-changelog": "5.1.0",
    "conventional-changelog-config-spec": "2.1.0",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "esbuild": "0.25.10",
    "glob": "11.0.3",
    "joycon": "3.1.1",
    "jsonc-parser": "3.3.1",
    "meow": "14.0.0",
    "semver": "7.7.2",
    "yaml": "2.8.1",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/json-schema": "7.0.15",
    "@types/node": "20.19.0",
    "@types/semver": "7.7.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.4.0",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.45.0",
    "vitest": "3.2.4"
  }
}
